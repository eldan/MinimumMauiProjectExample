<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinimumMauiProjectExample.Views.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout>
        
        <Label 
            Text="Type a UserName (Email)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding EmailInput}" />

        <Label 
         Text="Type a Password"
         VerticalOptions="Center" 
         HorizontalOptions="Center" />
        <Entry Text="{Binding PasswordInput1}" />

        <Label 
          Text="ReType your Password"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />
        <Entry Text="{Binding PasswordInput2}" />
        
        <Button Command="{Binding SubmitRegisterCommand}" IsEnabled="{Binding IsRegisterButtonEnabled}" Text="Register"/>
        <Button BackgroundColor="Transparent" TextColor="blue" Command="{Binding GoLoginCommand}" Text="Go Login"/>

    </VerticalStackLayout>
</ContentPage>