<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MinimumMauiProjectExample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MinimumMauiProjectExample.Views"
    xmlns:m="clr-namespace:MinimumMauiProjectExample"
    Title="MinimumMauiProjectExample"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:LoginPage}"
        IsVisible="{Binding IsNotLogin}"
        Route="LoginPage" />

    <ShellContent
        Title="Register Page"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        IsVisible="{Binding IsNotLogin}"
        Route="RegisterPage" />

    <ShellContent
        Title="Items Page"
        ContentTemplate="{DataTemplate local:ItemsPage}"
        IsVisible="{Binding IsLogin}"
        Route="ItemsPage" />

    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate m:MainPage}"
        IsVisible="False"
        Route="MainPage" />

    <MenuItem
        Command="{Binding LogoutCommand}"
        IsEnabled="{Binding IsLogin}"
        Text="{Binding LogoutText}" />
</Shell>
